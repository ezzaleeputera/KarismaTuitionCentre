<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_editor_absoluteX="11dp"
    tools:layout_editor_absoluteY="69dp"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sky_bg"
        tools:context=".register.reg_pelajar.Register_Activity_RegPelajar_Pengajar">

        <TextView
            android:id="@+id/titleMakPelajar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Maklumat Pelajar:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nama_regP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/nama_penuh"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleMakPelajar" />

        <EditText
            android:id="@+id/emel_regP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/emel"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nama_regP" />


        <EditText
            android:id="@+id/noKP_regP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/nombor_kad_pengenalan"
            android:imeActionLabel=""
            android:imeOptions="actionDone"
            android:inputType="textPostalAddress"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emel_regP" />

        <EditText
            android:id="@+id/kl_regP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/kata_laluan"
            android:imeActionLabel=""
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noKP_regP" />



        <TextView
            android:id="@+id/titleRegSubjek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tajuk_daftar_subjek"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kl_regP" />

        <CheckBox
            android:id="@+id/cb_BM"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="#98B7EC"
            android:text="@string/bahasa_melayu"
            app:layout_constraintEnd_toStartOf="@+id/cb_Bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleRegSubjek" />

        <CheckBox
            android:id="@+id/cb_BI"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:background="#98B7EC"
            android:text="@string/bahasa_inggeris"
            app:layout_constraintEnd_toStartOf="@+id/cb_Pp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_BM" />

        <CheckBox
            android:id="@+id/cb_Mt"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:background="#98B7EC"
            android:text="@string/matematik"
            app:layout_constraintEnd_toStartOf="@+id/cb_Sai"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_BI" />

        <CheckBox
            android:id="@+id/cb_AMt"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:background="#98B7EC"
            android:text="@string/matematik_tambahan"
            app:layout_constraintEnd_toStartOf="@+id/cb_Kim"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_Mt" />

        <CheckBox
            android:id="@+id/cb_Phy"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:background="#98B7EC"
            android:text="@string/fizik"
            app:layout_constraintEnd_toStartOf="@+id/cb_BC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_AMt" />

        <CheckBox
            android:id="@+id/cb_Bio"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:background="#98B7EC"
            android:text="@string/biologi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleRegSubjek" />

        <CheckBox
            android:id="@+id/cb_Pp"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginEnd="24dp"
            android:background="#98B7EC"
            android:text="@string/prinsip_perakaunan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_Bio" />

        <CheckBox
            android:id="@+id/cb_Sai"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginEnd="24dp"
            android:background="#98B7EC"
            android:text="@string/sains"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_Pp" />

        <CheckBox
            android:id="@+id/cb_Kim"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginEnd="24dp"
            android:background="#98B7EC"
            android:text="@string/kimia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_Sai" />

        <CheckBox
            android:id="@+id/cb_BC"
            android:layout_width="163dp"
            android:layout_height="49dp"
            android:layout_marginEnd="24dp"
            android:background="#98B7EC"
            android:text="@string/bahasa_cina"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_Kim" />


        <TextView
            android:id="@+id/titleMakIbuBapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Maklumat Ibu Bapa:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_BC" />

        <EditText
            android:id="@+id/nama_regIB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/nama_penuh"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleMakIbuBapa" />

        <EditText
            android:id="@+id/emel_regIB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/emel"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nama_regIB" />


        <EditText
            android:id="@+id/noKP_regIB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/nombor_kad_pengenalan"
            android:imeActionLabel=""
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emel_regIB" />


        <EditText
            android:id="@+id/kl_regIB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/kata_laluan"

            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:shadowColor="#121111"
            android:shadowRadius="5"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noKP_regIB" />

        <ProgressBar
            android:id="@+id/progressBarS"
            style="?android:attr/progressBarStyle"
            android:layout_width="66dp"
            android:layout_height="67dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.831"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noKP_regIB"
            app:layout_constraintVertical_bias="0.673" />

        <Button
            android:id="@+id/btn_regS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="48dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="16dp"
            android:background="#2A6CA6"
            android:text="Selesai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kl_regIB"
            app:layout_constraintVertical_bias="0.147" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>