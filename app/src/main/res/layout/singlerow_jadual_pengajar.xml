<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/slot_shape"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/list_root_P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_jSubjek_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:paddingTop="2sp"
                    android:paddingBottom="10sp"
                    android:text="Subjects' Name"
                    android:textAllCaps="true"
                    android:textColor="#5E35B1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_jPengajar_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:paddingBottom="10sp"
                    android:text="Teacher's Name"
                    android:textColor="#1E88E5"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvShow_masaStart_P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:paddingBottom="10sp"
                    android:text="MasaStart"
                    android:textColor="#00897B"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvShow_masaEnd_P"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:paddingBottom="0sp"
                    android:text="MasaEnd"
                    android:textColor="#9CD81B60"
                    android:textStyle="bold|italic" />

                <TableLayout
                    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:stretchColumns="0,1"
                    android:shrinkColumns="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/btnEditSlot_P"
                            android:layout_width="79dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="180dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"

                            android:background="@drawable/buttonborderedit"
                            android:contentDescription="button_Delete"
                            app:srcCompat="@drawable/ic_baseline_edit" />

                        <ImageButton
                            android:id="@+id/btnDeleteSlot_P"
                            android:layout_width="79dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/buttonborderdelete"
                            android:contentDescription="button_Delete"
                            app:srcCompat="@android:drawable/ic_delete" />

                    </TableRow>
                </TableLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>